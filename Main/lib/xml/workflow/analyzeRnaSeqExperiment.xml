<workflowGraph name="analyzeRnaSeqExperiment">
  <param name="parentDataDir"/>
  <param name="projectName"/>
  <param name="seqSizeFile"/>
  <param name="geneFootprintFile"/>
  <param name="pseudogenesFile"/>
  <param name="gusConfigFile"/>
  <param name="organismAbbrev"/>
  <param name="experimentName"/>
  <param name="experimentDatasetName"/>
  <param name="experimentDatasetVersion"/>
  <param name="strandSpecific"/>
  <param name="relativeWebServicesDir"/>
  <param name="studyDir"/>
  <param name="analysisConfig"/>
  <param name="genomeExtDbRlsSpec"/>
  
  <constant name="tpmDir">$$parentDataDir$$/TPM</constant>


  <constant name="nextflowAnalysisDir">$$parentDataDir$$/nextflowAnalysisDir</constant>
  <constant name="nextflowConfigFile">$$nextflowAnalysisDir$$/nextflow.config</constant>

  <constant name="nextflowResultsDir">$$nextflowAnalysisDir$$/nextflow_output</constant>
  <constant name="normalizeCoverageDir">$$nextflowResultsDir$$/normalize_coverage</constant>
  <constant name="analysisOutputDir">$$nextflowResultsDir$$/analysis_output</constant>

  <step name="makeAnslysisDir" stepClass="ReFlow::StepClasses::MakeDataDir">
    <paramValue name="dataDir">$$nextflowAnalysisDir$$</paramValue>
  </step>
  
  <step name="tpmFromHtseqCounts" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::TpmFromHtseqCounts">
    <paramValue name="studyDir">$$studyDir$$</paramValue>
    <paramValue name="outputDir">$$tpmDir$$</paramValue>
    <paramValue name="geneFootprintFile">$$geneFootprintFile$$</paramValue>
    <paramValue name="strandSpecific">$$strandSpecific$$</paramValue>
    <paramValue name="analysisConfig">$$analysisConfig$$</paramValue>
  </step>

  <step name="makeRnaSeqNextflowConfig" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeRnaSeqAnalysisNextflowConfig">
    <paramValue name="analysisConfigFile">$$analysisConfig$$</paramValue>
    <paramValue name="finalDir">$$studyDir$$</paramValue>
    <paramValue name="outputDirectory">$$nextflowResultsDir$$</paramValue>
    <paramValue name="technologyType">RNASeq</paramValue>
    <paramValue name="inputFile">$$studyDir$$/ancillary.txt</paramValue>
    <paramValue name="tpmDir">$$tpmDir$$</paramValue>
    <paramValue name="pseudogenesFile">$$pseudogenesFile$$</paramValue>
    <paramValue name="chromosomeSizeFile">$$seqSizeFile$$</paramValue>
    <paramValue name="nextflowConfigFile">$$nextflowConfigFile$$</paramValue>
    <depends name="tpmFromHtseqCounts"/>
    <depends name="makeAnslysisDir"/>
  </step>

  <subgraph name="runNextflowLocal" xmlFile="runNextflowLocal.xml">
    <paramValue name="parentDataDir">$$parentDataDir$$</paramValue>
    <paramValue name="analysisDir">$$nextflowAnalysisDir$$</paramValue>
    <paramValue name="nextflowConfigFile">$$nextflowConfigFile$$</paramValue>
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="genomeSpec">$$genomeExtDbRlsSpec$$</paramValue>
    <paramValue name="isProteomeAnalysis">true</paramValue>
    <paramValue name="datasetSpec">$$experimentDatasetName$$|$$experimentDatasetVersion$$</paramValue>
    <paramValue name="nextflowWorkflow">VEuPathDB/study-assay-results-nextflow</paramValue>
    <paramValue name="projectName">$$projectName$$</paramValue>
    <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
    <paramValue name="entry"></paramValue>
    <depends name="makeRnaSeqNextflowConfig"/>
  </subgraph>

  <step name="loadStudyResultsFromConfig" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertStudyResults" stepLoadTypes="plugin">
    <paramValue name="configFile">$$analysisOutputDir$$/insert_study_results_config.txt</paramValue>
    <paramValue name="inputDir">$$analysisOutputDir$$</paramValue>
    <paramValue name="extDbRlsSpec">$$experimentDatasetName$$|$$experimentDatasetVersion$$</paramValue>
    <paramValue name="studyName">$$experimentDatasetName$$</paramValue>
    <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
    <depends name="runNextflowLocal"/>
  </step>

  <step name="loadRNASeqMetrics" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertRNASeqMetrics" stepLoadTypes="plugin">
    <paramValue name="experimentDir">$$parentDataDir$$</paramValue>
    <paramValue name="extDbRlsSpec">$$experimentDatasetName$$|$$experimentDatasetVersion$$</paramValue>
    <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
    <depends name="loadStudyResultsFromConfig"/>
  </step>

  <step name="copyNormalizedBedGraphToWebServiceDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CopyNormalizedBedGraphToWebServiceDir">
    <paramValue name="copyFromDir">$$normalizeCoverageDir$$</paramValue>
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="relativeDir">$$relativeWebServicesDir$$</paramValue>
    <paramValue name="experimentDatasetName">$$experimentDatasetName$$</paramValue>
    <paramValue name="analysisConfig">$$analysisConfig$$</paramValue>
    <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
    <paramValue name="dataType">bulkrnaseq</paramValue>
    <depends name="runNextflowLocal"/>
  </step>

  <step name="copyMergedBigwigsToWebSvc" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::CopyRnaSeqMergedBigwigsToWebSvc">
    <paramValue name="copyFromDir">$$nextflowResultsDir$$/mergedBigwigs</paramValue>
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="relativeDir">$$relativeWebServicesDir$$</paramValue>
    <paramValue name="experimentDatasetName">$$experimentDatasetName$$</paramValue>
    <paramValue name="analysisConfig">$$analysisConfig$$</paramValue>
    <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
    <paramValue name="dataType">bulkrnaseq</paramValue>
    <depends name="copyNormalizedBedGraphToWebServiceDir"/>
  </step>


  <!-- maybe change this step based on new nextflow dirs?? -->
  <step name="removeIntermediateFiles" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::RemoveIntermediateRNASeqFiles">
    <paramValue name="experimentDir">$$parentDataDir$$</paramValue>
    <depends name="loadRNASeqMetrics"/>
    <depends name="copyMergedBigwigsToWebSvc"/>
  </step>


</workflowGraph>
