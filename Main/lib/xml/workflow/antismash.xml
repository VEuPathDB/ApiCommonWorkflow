<workflowGraph name="antismash">
  <param name="gusConfigFile"/>
  <param name="parentDataDir"/>
  <param name="projectName"/>
  <param name="genomicSequenceFile"/>
  <param name="gffFile"/>
  <param name="organismAbbrev"/>
  <param name="genomeExtDbRlsSpec"/>

  <constant name="dataDir">$$parentDataDir$$/antismash</constant>

  <constant name="analysisDirectory">$$dataDir$$/analysisDir</constant>
  <constant name="resultsDirectory">$$analysisDirectory$$/results</constant>

  <constant name="fastaSymLink">$$dataDir$$/$$organismAbbrev$$.fasta</constant>
  <constant name="gffSymLink">$$dataDir$$/$$organismAbbrev$$.gff</constant>

  <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
    <paramValue name="dataDir">$$dataDir$$</paramValue>
  </step>

  <step name="makeAnalysisDir" stepClass="ReFlow::StepClasses::MakeDataDir">
     <paramValue name="dataDir">$$analysisDirectory$$</paramValue>
     <depends name="makeDataDir"/>
  </step>

  <step name="makeResultDir" stepClass="ReFlow::StepClasses::MakeDataDir">
     <paramValue name="dataDir">$$resultsDirectory$$</paramValue>
     <depends name="makeAnalysisDir"/>
  </step>

  <step name="symLinkFasta" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::SymLinkDataDirFile">
    <paramValue name="fromFile">$$genomicSequenceFile$$</paramValue>
    <paramValue name="toFile">$$fastaSymLink$$</paramValue>
    <depends name="makeResultDir"/>
  </step>

  <step name="symLinkGff" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::SymLinkDataDirFile">
    <paramValue name="fromFile">$$gffFile$$</paramValue>
    <paramValue name="toFile">$$gffSymLink$$</paramValue>
    <depends name="makeResultDir"/>
  </step>

  <step name="makeNextflowConfig" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeAntismashNextflowConfig">
    <paramValue name="workingDirRelativePath">$$dataDir$$</paramValue>
    <paramValue name="analysisDir">$$analysisDirectory$$</paramValue>
    <paramValue name="configFileName">nextflow.config</paramValue>
    <paramValue name="resultDir">$$resultsDirectory$$</paramValue>
    <paramValue name="fasta">$$fastaSymLink$$</paramValue>
    <paramValue name="gff">$$gffSymLink$$</paramValue>
    <paramValue name="organism">fungi</paramValue>
    <depends name="makeGffFile"/>
  </step>

  <subgraph name="runNextflowOnCluster" xmlFile="runNextflowOnCluster.xml">
     <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
    <paramValue name="projectName">$$projectName$$</paramValue>
    <paramValue name="parentDataDir">$$dataDir$$</paramValue>
    <paramValue name="nextflowConfigFile">$$analysisDirectory$$/nextflow.config</paramValue>
    <paramValue name="ngsSamplesNextflowConfigFile"></paramValue>
    <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
    <paramValue name="genomeSpec">$$genomeExtDbRlsSpec$$</paramValue> <!-- NAME|version -->
    <paramValue name="isProteomeAnalysis">false</paramValue>
    <paramValue name="datasetSpec"></paramValue>
    <paramValue name="analysisDir">$$analysisDirectory$$</paramValue>
    <paramValue name="nextflowWorkflow">VEuPathDB/antismash-nextflow</paramValue>
    <paramValue name="entry"></paramValue>
    <depends name="makeNextflowConfig"/>
  </subgraph>

  <step name="insertAntiSmash" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAntiSmash" stepLoadTypes="plugin">
    <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
    <paramValue name="gffFile">$$resultsDirectory$$/sorted.gff.gz</paramValue>
    <paramValue name="extDbSpec">$$genomeExtDbRlsSpec$$</paramValue>
    <depends name="runNextflowOnCluster"/>
  </step>

</workflowGraph>
