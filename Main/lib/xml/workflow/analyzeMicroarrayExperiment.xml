<workflowGraph name="analyzeMicroarrayExpression">
    <param name="parentDataDir"/>
    <param name="experimentDatasetName"/>
    <param name="experimentDatasetVersion"/>
    <param name="genomeExtDbRlsSpec"/>
    <param name="doExpressionAnalysis"/>
    <param name="platformMappingDir"/>
    <param name="organismAbbrev"/>
    <param name="expectCdfFile"/>
    <param name="expectNdfFile"/>
    <param name="gusConfigFile"/>
    <param name="projectName"/>

    <constant name="dataDir">$$parentDataDir$$/$$experimentDatasetName$$</constant>

    <constant name="nextflowAnalysisDir">$$dataDir$$/nextflowAnalysisDir</constant>
    <constant name="nextflowConfigFile">$$nextflowAnalysisDir$$/nextflow.config</constant>
    <constant name="nextflowResultsDir">$$nextflowAnalysisDir$$/nextflow_output</constant>

    <constant name="analysisOutputDir">$$nextflowResultsDir$$/analysis_output</constant>
    <!--
    <step name="makeDataDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$dataDir$$</paramValue>
    </step>
-->


    <step name="makeAnslysisDir" stepClass="ReFlow::StepClasses::MakeDataDir">
      <paramValue name="dataDir">$$nextflowAnalysisDir$$</paramValue>
    </step>


    <step name="makeStudyAssayResultsNextflowConfig" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MakeStudyAssayResultsNextflowConfig">
      <paramValue name="analysisConfigFile">$$dataDir$$/final/analysisConfig.xml</paramValue>
      <paramValue name="finalDir">$$dataDir$$/final</paramValue>
      <paramValue name="outputDirectory">$$nextflowResultsDir$$</paramValue>
      <paramValue name="technologyType">microarray</paramValue>
      <paramValue name="geneProbeMappingTabFile">geneProbeMapping.tab</paramValue>
      <paramValue name="platformDirectory">$$platformMappingDir$$</paramValue>
      <paramValue name="expectCdfFile">$$expectCdfFile$$</paramValue>
      <paramValue name="expectNdfFile">$$expectNdfFile$$</paramValue>
      <paramValue name="passPlatformMappingFile">true</paramValue>
      <paramValue name="nextflowConfigFile">$$nextflowConfigFile$$</paramValue>
      <depends name="makeAnslysisDir"/>
    </step>

    <subgraph name="runNextflowLocal" xmlFile="runNextflowLocal.xml">
      <paramValue name="parentDataDir">$$parentDataDir$$</paramValue>
      <paramValue name="analysisDir">$$nextflowAnalysisDir$$</paramValue>
      <paramValue name="nextflowConfigFile">$$nextflowConfigFile$$</paramValue>
      <paramValue name="organismAbbrev">$$organismAbbrev$$</paramValue>
      <paramValue name="genomeSpec">$$genomeExtDbRlsSpec$$</paramValue>
      <paramValue name="isProteomeAnalysis">true</paramValue>
      <paramValue name="datasetSpec">$$experimentDatasetName$$|$$experimentDatasetVersion$$</paramValue>
      <paramValue name="nextflowWorkflow">VEuPathDB/study-assay-results-nextflow</paramValue>
      <paramValue name="projectName">$$projectName$$</paramValue>
      <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
      <paramValue name="entry"></paramValue>
      <depends name="makeStudyAssayResultsNextflowConfig"/>
    </subgraph>

  <step name="loadStudyResultsFromConfig" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertStudyResults" stepLoadTypes="plugin">
    <paramValue name="configFile">$$analysisOutputDir$$/insert_study_results_config.txt</paramValue>
    <paramValue name="inputDir">$$analysisOutputDir$$</paramValue>
    <paramValue name="extDbRlsSpec">$$experimentDatasetName$$|$$experimentDatasetVersion$$</paramValue>
    <paramValue name="studyName">$$experimentDatasetName$$</paramValue>
    <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
	  <depends name="runNextflowLocal"/>

  </step>

    <step name="document-oneChannel"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">one_channel_MTHD</paramValue>
      <paramValue name="version">1.0</paramValue>
      <paramValue name="parameters"></paramValue>
      <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
      <depends name="runNextflowLocal"/>
    </step>

    <step name="document-twoChannel"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">two_channel_MTHD</paramValue>
      <paramValue name="version">1.0</paramValue>
      <paramValue name="parameters"></paramValue>
      <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
      <depends name="runNextflowLocal"/>
    </step>

    <step name="document-PaGE"
          stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InsertAnalysisMethodInvocation">
      <paramValue name="method">PaGE_MTHD</paramValue>
      <paramValue name="version">5.1.6.1</paramValue>
      <paramValue name="parameters"></paramValue>
      <paramValue name="gusConfigFile">$$gusConfigFile$$</paramValue>
      <depends name="runNextflowLocal"/>
    </step>

</workflowGraph>
